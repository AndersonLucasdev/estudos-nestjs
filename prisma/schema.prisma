datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  name         String
  email        String   @unique
  password     String
  phone        String
  creationDate DateTime
  gender       String
  birthDate    DateTime
  profilePhoto String
}


model Sales {
  id        Int    @id @default(autoincrement())
  sold      Int
  id_user   Int
  descricao String
}

model Amount {
  id Int @id @default(autoincrement())
}
